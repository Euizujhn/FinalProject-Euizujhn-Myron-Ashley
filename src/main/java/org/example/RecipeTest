    public static boolean InstructionTest(String FoodKey){
        try {
            JSONObject FoodIngredients = getFoodInfo(FoodKey);
            String List = (String) FoodIngredients.get("strInstructions");
            int WordCount = 5;
            String[] words = List.split("\\s+");
            StringBuilder extractedWords = new StringBuilder();
            for (int i = 0; i < WordCount && i < words.length; i++) {
                extractedWords.append(words[i]);
                if (i < WordCount - 1 && i < words.length - 1) {
                    extractedWords.append(" ");
                }
            }
            if (extractedWords.toString().equals("Put the flour, eggs, milk,")){
                return true;
            } else {
                return false;
            }
        } catch (Exception e) {
            System.err.println("Wrong");
            return false;
        }

    }

    public static boolean InstructionTest2(String FoodKey){
        try {
            JSONObject FoodIngredients = getFoodInfo(FoodKey);
